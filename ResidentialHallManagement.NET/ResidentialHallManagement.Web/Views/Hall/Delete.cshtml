@model ResidentialHallManagement.Core.Entities.Hall

@{
    ViewData["Title"] = "Delete Hall";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3>Delete Hall</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-triangle"></i>
                        <strong>Warning:</strong> Are you sure you want to delete this hall?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4">Hall ID</dt>
                        <dd class="col-sm-8">@Model.HallId</dd>

                        <dt class="col-sm-4">Hall Name</dt>
                        <dd class="col-sm-8">@Model.HallName</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.HallType</dd>

                        <dt class="col-sm-4">Capacity</dt>
                        <dd class="col-sm-8">@Model.HallCapacity</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="HallId" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>