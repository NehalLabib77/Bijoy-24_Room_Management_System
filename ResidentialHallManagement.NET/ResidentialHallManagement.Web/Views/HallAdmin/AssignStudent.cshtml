@{
    ViewData["Title"] = "Assign Student to Room";
    var hall = ViewBag.Hall as ResidentialHallManagement.Core.Entities.Hall;
    var availableRooms = ViewBag.AvailableRooms as List<string> ?? new List<string>();
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-person-plus"></i> Assign Student to Room</h2>
            <p class="text-muted">Manually assign a student to an available room in @hall?.HallName</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Dashboard", "HallAdmin")" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Student Assignment Form</h5>
                </div>
                <div class="card-body">
                    <form asp-action="ManuallyAssignRoom" asp-controller="HallAdmin" method="post">
                        <div class="mb-3">
                            <label class="form-label">Student ID *</label>
                            <input type="text" class="form-control" name="studentId" placeholder="Enter student ID" required />
                            <small class="text-muted">e.g., ST001, ST002</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Room *</label>
                            <select class="form-select" name="roomIdentity" required id="roomSelect">
                                <option value="">-- Select Available Room --</option>
                                @foreach (var room in availableRooms.OrderBy(r => r))
                                {
                                    <option value="@room">@room</option>
                                }
                            </select>
                            <small class="text-muted">Format: RoomNumber/Block (e.g., 125/C)</small>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Bed Number (Optional)</label>
                            <input type="text" class="form-control" name="bedNumber" placeholder="Enter bed number" />
                            <small class="text-muted">e.g., Bed A, Bed 1</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> 
                            <strong>@availableRooms.Count</strong> room(s) available
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            <i class="bi bi-check-circle"></i> Assign Room
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Available Rooms</h5>
                </div>
                <div class="card-body">
                    @if (availableRooms.Any())
                    {
                        <div class="list-group">
                            @foreach (var room in availableRooms.OrderBy(r => r))
                            {
                                <a href="#" class="list-group-item list-group-item-action room-item" 
                                   data-room="@room" onclick="selectRoom('@room'); return false;">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <strong>@room</strong>
                                        <span class="badge bg-success">Available</span>
                                    </div>
                                    <small class="text-muted">Click to select</small>
                                </a>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i> No available rooms at the moment.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function selectRoom(roomIdentity) {
        document.getElementById('roomSelect').value = roomIdentity;
        // Highlight the selected room
        document.querySelectorAll('.room-item').forEach(item => {
            item.classList.remove('active');
        });
        event.currentTarget.classList.add('active');
    }
</script>
