@model ResidentialHallManagement.Core.Entities.Room

@{
    ViewData["Title"] = "Manage Room";
    var roomMembers = ViewBag.RoomMembers as List<ResidentialHallManagement.Core.Entities.Student> ?? new
    List<ResidentialHallManagement.Core.Entities.Student>();
    var roomAssignments = ViewBag.RoomAssignments as List<ResidentialHallManagement.Core.Entities.RoomAssignment> ?? new
    List<ResidentialHallManagement.Core.Entities.RoomAssignment>();
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-door-closed"></i> Room Details</h2>
            <p class="text-muted">@Model.Hall?.HallName - Room @(Model.RoomNumber ?? Model.RoomId)</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="EditRooms" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Rooms
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Room Information Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-white"
                    style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h5 class="mb-0"><i class="bi bi-info-circle"></i> Room Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-sm">
                        <tr>
                            <th width="40%" class="text-muted">Room ID:</th>
                            <td><strong>@Model.RoomId</strong></td>
                        </tr>
                        <tr>
                            <th class="text-muted">Room Number:</th>
                            <td>@(Model.RoomNumber ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Room Name:</th>
                            <td>@(Model.RoomName ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Block:</th>
                            <td><span class="badge bg-secondary">@(Model.Block ?? "N/A")</span></td>
                        </tr>
                        <tr>
                            <th class="text-muted">Wing:</th>
                            <td>@(Model.Wing ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Floor:</th>
                            <td>@(Model.Floor?.ToString() ?? "N/A")</td>
                        </tr>
                        <tr>
                            <th class="text-muted">Hall:</th>
                            <td><strong>@Model.Hall?.HallName</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <!-- Capacity Information Card -->
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header text-white"
                    style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);">
                    <h5 class="mb-0"><i class="bi bi-diagram-3"></i> Capacity & Status</h5>
                </div>
                <div class="card-body">
                    <div class="row text-center mb-3">
                        <div class="col-md-6">
                            <h6 class="text-muted">Total Capacity</h6>
                            <h3 class="text-primary">@Model.RoomCapacity</h3>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-muted">Available Slots</h6>
                            <h3 class="@(Model.AvailableSlots > 0 ? "text-success" : "text-danger")">
                                @Model.AvailableSlots
                            </h3>
                        </div>
                    </div>
                    <hr />
                    <div class="mb-3">
                        <h6 class="text-muted">Room Status</h6>
                        @if (Model.Status == "Occupied")
                        {
                            <span class="badge bg-danger fs-6">Occupied (Full)</span>
                        }
                        else if (Model.Status == "Maintenance")
                        {
                            <span class="badge bg-warning text-dark fs-6">Under Maintenance</span>
                        }
                        else
                        {
                            <span class="badge bg-success fs-6">Available</span>
                        }
                    </div>
                    <div class="progress mt-3">
                        <div class="progress-bar @(Model.AvailableSlots > 0 ? "bg-success" : "bg-danger")"
                            role="progressbar"
                            style="width: @((100 - (Model.AvailableSlots * 100 / Model.RoomCapacity)))%">
                            @(100 - (Model.AvailableSlots * 100 / Model.RoomCapacity))% Occupied
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Room Members Card with Expandable Details -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="bi bi-people-fill"></i> Room Members (@roomMembers.Count)</h5>
                <button class="btn btn-sm btn-light" type="button" data-bs-toggle="collapse"
                    data-bs-target="#membersSection">
                    <i class="bi bi-chevron-down"></i>
                </button>
            </div>
        </div>
        <div class="collapse show" id="membersSection">
            <div class="card-body p-0">
                @if (roomMembers.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Student ID</th>
                                    <th>Faculty</th>
                                    <th>Semester</th>
                                    <th>Photo</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var member in roomMembers)
                                {
                                    <tr>
                                        <td>
                                            <strong>@member.StudentName</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">@member.StudentId</span>
                                        </td>
                                        <td>@(member.Faculty ?? "N/A")</td>
                                        <td>@(member.Semester > 0 ? member.Semester.ToString() : "N/A")</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(member.StudentId))
                                            {
                                                <div class="rounded-circle bg-primary d-inline-flex align-items-center justify-content-center"
                                                    style="width: 40px; height: 40px;">
                                                    <i class="bi bi-person-fill text-white"></i>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="rounded-circle bg-secondary d-inline-flex align-items-center justify-content-center"
                                                    style="width: 40px; height: 40px;">
                                                    <i class="bi bi-person-fill text-white"></i>
                                                </div>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Details", "Student", new { id = member.StudentId })"
                                                class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox" style="font-size: 48px; color: #ccc;"></i>
                        <p class="text-muted mt-3">No students assigned to this room yet</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-md-12">
            <div class="card shadow-sm">
                <div class="card-header text-white"
                    style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
                    <h5 class="mb-0"><i class="bi bi-tools"></i> Room Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex gap-2 flex-wrap">
                        <a asp-action="EditRooms" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Room
                        </a>
                        <a asp-action="AssignStudent" class="btn btn-success">
                            <i class="bi bi-person-plus"></i> Assign Student
                        </a>
                        @if (roomMembers.Any())
                        {
                            <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#removeModal">
                                <i class="bi bi-person-dash"></i> Remove Student
                            </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Remove Member Modal -->
<div class="modal fade" id="removeModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Remove Student from Room</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="removeStudentForm" method="post" asp-action="DeleteRoomAssignment" asp-controller="HallAdmin">
                <div class="modal-body">
                    <p>Select a student to remove from this room:</p>
                    <input type="hidden" name="roomId" value="@Model.RoomId" />
                    <input type="hidden" name="hallId" value="@Model.HallId" />
                    <select class="form-select" id="assignmentIdSelect" name="assignmentId" required>
                        <option value="">-- Select Student --</option>
                        @foreach (var assignment in roomAssignments)
                        {
                            <option value="@assignment.AssignmentId">
                                @assignment.Student?.StudentName (@assignment.Student?.StudentId)
                            </option>
                        }
                    </select>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Remove
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>