        <h1 class="hero-title">BIJOY-24</h1>
        <h2 class="hero-subtitle-main">Residential Hall Management System</h2>
        <p class="hero-subtitle">Streamline your accommodation experience with our modern, efficient, and
            student-friendly housing management platform</p>

        @if (User.Identity?.IsAuthenticated == true)
        {
            <div class="hero-buttons">
                <a asp-controller="Home" asp-action="UserDashboard" class="btn btn-hero-primary">
                    <i class="bi bi-speedometer2"></i> Go to Dashboard
                </a>
                @if (User.IsInRole("Student"))
                {
                    <a asp-controller="SeatApplication" asp-action="Index" class="btn btn-hero-secondary">
                        <i class="bi bi-door-open"></i> Apply for Room
                    </a>
                }
            </div>
        }
        else
        {
            <div class="hero-buttons">
                <a asp-controller="Account" asp-action="UnifiedAuth" class="btn btn-hero-primary">
                    <i class="bi bi-box-arrow-in-right"></i> Login / Register
                </a>
                <a href="#features" class="btn btn-hero-outline">
                    <i class="bi bi-info-circle"></i> Learn More
                </a>
            </div>
        }

        <!-- Stats Highlights -->
        <div class="hero-stats">
            <div class="stat-item">
                <div class="stat-icon">
                    <i class="bi bi-building"></i>
                </div>
                <div class="stat-value">@(ViewBag.TotalHalls ?? 0)</div>
                <div class="stat-label">Residential Halls</div>
            </div>
            <div class="stat-item">
                <div class="stat-icon">
                    <i class="bi bi-door-closed"></i>
                </div>
                <div class="stat-value">@(ViewBag.TotalRooms ?? 0)</div>
                <div class="stat-label">Total Rooms</div>
            </div>
            <div class="stat-item">
                <div class="stat-icon">
                    <i class="bi bi-people"></i>
                </div>
                <div class="stat-value">@(ViewBag.TotalStudents ?? 0)</div>
                <div class="stat-label">Students Housed</div>
            </div>
        </div>
    </div>

    <div class="scroll-indicator">
        <i class="bi bi-chevron-down"></i>
    </div>
</section>

<!-- Image Gallery Section - Dynamic from /assets/home/ folder -->
@if (homeImages.Any())
{
    <section class="gallery-section" id="gallery">
        <div class="container">
            <div class="text-center mb-4">
                <span class="section-badge">Gallery</span>
                <h2 class="section-heading">Our Residential Halls</h2>
                <p class="section-subheading">Take a look at our modern facilities and comfortable living spaces</p>
            </div>

            <!-- Image Carousel -->
            <div id="homeGalleryCarousel" class="carousel slide gallery-carousel" data-bs-ride="carousel"
                data-bs-interval="5000">
                <div class="carousel-indicators">
                    @for (int i = 0; i < homeImages.Count; i++)
                    {
                        <button type="button" data-bs-target="#homeGalleryCarousel" data-bs-slide-to="@i"
                            class="@(i == 0 ? "active" : "")" aria-label="Slide @(i + 1)"></button>
                    }
                </div>
                <div class="carousel-inner">
                    @for (int i = 0; i < homeImages.Count; i++)
                    {
                        <div class="carousel-item @(i == 0 ? "active" : "")">
                            <div class="gallery-image-wrapper">
                                <img src="@homeImages[i]" class="d-block w-100 gallery-image" alt="Hall Image @(i + 1)">
                                <div class="gallery-overlay">
                                    <div class="gallery-overlay-content">
                                        <i class="bi bi-building"></i>
                                        <span>Image @(i + 1) of @homeImages.Count</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                @if (homeImages.Count > 1)
                {
                    <button class="carousel-control-prev" type="button" data-bs-target="#homeGalleryCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-icon">
                            <i class="bi bi-chevron-left"></i>
                        </span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#homeGalleryCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-icon">
                            <i class="bi bi-chevron-right"></i>
                        </span>
                        <span class="visually-hidden">Next</span>
                    </button>
                }
            </div>

            <!-- Thumbnails -->
            @if (homeImages.Count > 1)
            {
                <div class="gallery-thumbnails">
                    @for (int i = 0; i < homeImages.Count; i++)
                    {
                        <div class="gallery-thumbnail @(i == 0 ? "active" : "")" data-bs-target="#homeGalleryCarousel"
                            data-bs-slide-to="@i">
                            <img src="@homeImages[i]" alt="Thumbnail @(i + 1)">
                        </div>
                    }
                </div>
            }
        </div>
    </section>
}

