@model IEnumerable<ResidentialHallManagement.Core.Entities.BoarderRegistry>

@{
    ViewData["Title"] = "Manage Boarder Registry";
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-card-text"></i> Boarder Registry Management</h2>
            <p class="text-muted">Create and manage student boarder numbers for registration</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CreateBoarderEntry" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Add Boarder Entry
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0">All Boarder Entries</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Boarder No</th>
                                <th>Student ID</th>
                                <th>Name</th>
                                <th>Faculty</th>
                                <th>Session</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var entry in Model)
                            {
                                var student = (ViewBag.Students != null && !string.IsNullOrEmpty(entry.StudentId) &&
                                ViewBag.Students.ContainsKey(entry.StudentId))
                                ? ViewBag.Students[entry.StudentId]
                                : null;
                                <tr>
                                    <td>
                                        <strong>@entry.BoarderNo</strong>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(entry.StudentId))
                                        {
                                            <span class="badge bg-info">@entry.StudentId</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not assigned</span>
                                        }
                                    </td>
                                    <td>@(entry.Name ?? "N/A")</td>
                                    <td>@(student?.Faculty ?? "-")</td>
                                    <td>@(student?.Semester > 0 ? student.Semester.ToString() : "-")</td>
                                    <td>
                                        @if (entry.Status == "Assigned")
                                        {
                                            <span class="badge bg-success">Assigned</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Available</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="EditBoarderEntry" asp-route-id="@entry.BoarderNo"
                                            class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal"
                                            data-bs-target="#deleteModal" onclick="setDeleteId('@entry.BoarderNo')">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox" style="font-size: 48px; color: #ccc;"></i>
                    <p class="text-muted mt-3">No boarder entries found. <a asp-action="CreateBoarderEntry">Create one
                            now</a></p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this boarder entry?</p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form method="post" asp-action="DeleteBoarderEntry" style="display: inline;">
                    <input type="hidden" id="deleteId" name="id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function setDeleteId(id) {
        document.getElementById('deleteId').value = id;
    }
</script>