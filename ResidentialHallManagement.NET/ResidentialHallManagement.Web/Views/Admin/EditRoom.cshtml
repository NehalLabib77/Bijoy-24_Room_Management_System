@model ResidentialHallManagement.Core.Entities.Room
@{
    ViewData["Title"] = "Edit Room";
    var halls = ViewBag.Halls as List<ResidentialHallManagement.Core.Entities.Hall> ?? new
    List<ResidentialHallManagement.Core.Entities.Hall>();
}

<div class="container-fluid mt-4">
    <h2>Edit Room</h2>
    <div class="card">
        <div class="card-body">
            <form asp-action="EditRoom" method="post">
                <input type="hidden" asp-for="RoomId" />
                <input type="hidden" asp-for="HallId" />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="RoomNumber" class="form-label">Room Number</label>
                        <input asp-for="RoomNumber" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RoomCapacity" class="form-label">Capacity</label>
                        <input asp-for="RoomCapacity" type="number" class="form-control" min="1" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Block" class="form-label">Block</label>
                        <input asp-for="Block" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Floor" class="form-label">Floor</label>
                        <input asp-for="Floor" type="number" class="form-control" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label">Status</label>
                        <select asp-for="Status" class="form-select">
                            <option value="Available">Available</option>
                            <option value="Occupied">Occupied</option>
                            <option value="Maintenance">Maintenance</option>
                        </select>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Hall</label>
                        <select asp-for="HallId" class="form-select">
                            @foreach (var h in halls)
                            {
                                <option value="@h.HallId" selected="@(h.HallId == Model.HallId ? "selected" : null)">
                                    @h.HallName</option>
                            }
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="ManageRooms" class="btn btn-secondary ms-2">Cancel</a>
            </form>
        </div>
    </div>
</div>