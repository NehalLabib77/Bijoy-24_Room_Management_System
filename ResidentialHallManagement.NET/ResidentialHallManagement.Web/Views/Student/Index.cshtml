@model IEnumerable<ResidentialHallManagement.Core.Entities.Student>

@{
    ViewData["Title"] = "Students";
}

<div class="container">
    <div class="row mb-3">
        <div class="col">
            <h2>Students</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Student
            </a>
        </div>
    </div>

    <!-- status messages are shown by _StatusMessage partial -->

    <div class="card">
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3 mb-3">
                <div class="col-md-4">
                    <input type="text" name="searchName" class="form-control" placeholder="Search by name...">
                </div>
                <div class="col-md-3">
                    <input type="text" name="searchId" class="form-control" placeholder="Search by ID...">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="bi bi-search"></i> Search
                    </button>
                </div>
                <div class="col-md-3">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="bi bi-arrow-counterclockwise"></i> Clear
                    </a>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Student ID</th>
                            <th>Name</th>
                            <th>Gender</th>
                            <th>Mobile</th>
                            <th>Blood Group</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var student in Model)
                        {
                            <tr>
                                <td>@student.StudentId</td>
                                <td>@student.StudentName</td>
                                <td>@student.Gender</td>
                                <td>@student.Mobile</td>
                                <td>@student.BloodGroup</td>
                                <td>
                                    <span class="badge @(student.Status == "RUNNING" ? "bg-success" : "bg-secondary")">
                                        @student.Status
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@student.StudentId" class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@student.StudentId" class="btn btn-sm btn-warning">
                                        <i class="bi bi-pencil"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@student.StudentId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>