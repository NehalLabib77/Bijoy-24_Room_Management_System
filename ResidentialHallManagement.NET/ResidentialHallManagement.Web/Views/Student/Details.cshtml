@model ResidentialHallManagement.Core.Entities.Student

@{
    ViewData["Title"] = "Student Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h3>Student Details</h3>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Student ID</dt>
                        <dd class="col-sm-8">@Model.StudentId</dd>

                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Model.StudentName</dd>

                        <dt class="col-sm-4">Gender</dt>
                        <dd class="col-sm-8">@Model.Gender</dd>

                        <dt class="col-sm-4">Mobile</dt>
                        <dd class="col-sm-8">@Model.Mobile</dd>

                        <dt class="col-sm-4">Blood Group</dt>
                        <dd class="col-sm-8">@Model.BloodGroup</dd>

                        <dt class="col-sm-4">Permanent Address</dt>
                        <dd class="col-sm-8">@Model.PermanentAddress</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge @(Model.Status == "RUNNING" ? "bg-success" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>
                    </dl>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@Model.StudentId" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>