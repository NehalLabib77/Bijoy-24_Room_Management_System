@{
    ViewData["Title"] = "Admin Login";
    Layout = "~/Views/Shared/_LayoutBlank.cshtml";
}

<div class="container-fluid vh-100 d-flex align-items-center"
    style="background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="card shadow-lg border-0">
                    <div class="card-header bg-danger text-white">
                        <div class="text-center py-4">
                            <h2 class="mb-1"><i class="bi bi-lock-fill"></i> Admin Portal</h2>
                            <p class="mb-0 small">Residential Hall Management System</p>
                        </div>
                    </div>
                    <div class="card-body p-5">
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <h5 class="mb-4 text-center text-danger fw-bold">System Admin Login</h5>

                        <form method="post" asp-action="Login" asp-controller="AdminAuth">
                            <div asp-validation-summary="All" class="alert alert-danger"></div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-person-fill"></i> Username
                                </label>
                                <input type="text" name="username" class="form-control form-control-lg"
                                    placeholder="Enter your username" required autofocus />
                            </div>

                            <div class="mb-4">
                                <label class="form-label fw-bold">
                                    <i class="bi bi-key-fill"></i> Password
                                </label>
                                <input type="password" name="password" class="form-control form-control-lg"
                                    placeholder="Enter your password" required />
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-danger btn-lg fw-bold">
                                    <i class="bi bi-box-arrow-in-right"></i> Login
                                </button>
                            </div>

                            <hr class="my-4" />

                            <p class="text-center mb-3">
                                <a href="@Url.Action("Login", "Account")" class="text-decoration-none">
                                    <i class="bi bi-arrow-left"></i> Back to Student/User Login
                                </a>
                            </p>
                        </form>
                    </div>
                </div>

                <div class="alert alert-info mt-4"
                    style="background-color: rgba(255,255,255,0.2); border: 1px solid white; color: white;">
                    <i class="bi bi-info-circle"></i> <strong>System Admin Access:</strong><br>
                    Please use the credentials provided by the database administrator.<br>
                    <small>Hall Admins: Contact System Admin for account creation.</small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}