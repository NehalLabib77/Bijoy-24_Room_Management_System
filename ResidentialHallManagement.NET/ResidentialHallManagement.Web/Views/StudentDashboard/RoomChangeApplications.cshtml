@model IEnumerable<ResidentialHallManagement.Core.Entities.RoomChangeRequest>

@{
    ViewData["Title"] = "Room Change Applications";
}

<div class="container mt-4">
    <h2><i class="bi bi-arrow-left-right"></i> Room Change Applications</h2>
    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Request ID</th>
                        <th>Requested Room</th>
                        <th>Reason</th>
                        <th>Request Date</th>
                        <th>Status</th>
                        <th>Processed Date</th>
                        <th>Admin Remarks</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>#@request.RequestId</td>
                            <td>
                                @request.RequestedRoom?.Hall?.HallName<br />
                                <small>Room @request.RequestedRoomId</small>
                            </td>
                            <td>@(request.Reason ?? "N/A")</td>
                            <td>@request.RequestDate.ToString("dd MMM yyyy")</td>
                            <td>
                                @if (request.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else if (request.Status == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                            </td>
                            <td>@(request.ProcessedDate?.ToString("dd MMM yyyy") ?? "-")</td>
                            <td>@(request.AdminRemarks ?? "-")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox" style="font-size: 48px;"></i>
            <p class="mt-3">No room change applications submitted yet</p>
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>
