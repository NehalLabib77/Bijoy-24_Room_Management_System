@using ResidentialHallManagement.Core.Entities
@model List<Seat>
@{
    ViewData["Title"] = "My Room & Roommates";
    var room = ViewBag.Room as Room;
    var hall = ViewBag.Hall as Hall;
    var currentStudentId = ViewBag.CurrentStudentId as string;

    // Helper function to render seat card
    void RenderSeatCard(Seat seat, string position)
    {
        var isBooked = seat?.Status == "Booked" && seat?.BookedByStudent != null;
        var isPending = seat?.Status == "Pending";
        var isAvailable = seat?.Status == "Available";
        var isMaintenance = seat?.Status == "Maintenance";
        var isCurrentUser = seat?.BookedByStudentId == currentStudentId;

        var statusClass = isBooked ? "border-success bg-success bg-opacity-10" :
        isPending ? "border-warning bg-warning bg-opacity-10" :
        isMaintenance ? "border-danger bg-danger bg-opacity-10" :
        "border-secondary bg-light";
        var statusBadgeClass = isBooked ? "bg-success" :
        isPending ? "bg-warning text-dark" :
        isMaintenance ? "bg-danger" :
        "bg-secondary";
        var statusText = seat?.Status ?? "No Seat";

        <div class="col-6">
            <div class="card h-100 @statusClass" style="min-height: 200px;">
                <div class="card-header d-flex justify-content-between align-items-center py-2">
                    <span class="badge bg-info">@position</span>
                    <span class="badge @statusBadgeClass">@statusText</span>
                </div>
                <div class="card-body text-center p-3">
                    @if (isBooked && seat?.BookedByStudent != null)
                    {
                        var student = seat.BookedByStudent;
                        var initials = string.IsNullOrEmpty(student.StudentName) ? "?" :
                        string.Join("", student.StudentName.Split(' ').Where(s => !string.IsNullOrEmpty(s)).Select(s => s[0]));

                        <div class="position-relative mb-2">
                            <div class="rounded-circle @(isCurrentUser ? "bg-primary" : "bg-success") text-white d-flex align-items-center justify-content-center mx-auto"
                                style="width: 60px; height: 60px; font-size: 1.25rem; font-weight: 600;">
                                @initials.ToUpper()
                            </div>
                            @if (isCurrentUser)
                            {
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-primary"
                                    style="font-size: 0.65rem;">
                                    YOU
                                </span>
                            }
                        </div>
                        <h6 class="card-title mb-1 @(isCurrentUser ? "text-primary fw-bold" : "")">@student.StudentName</h6>
                        <p class="card-text small text-muted mb-0">@student.StudentId</p>
                        <p class="card-text small text-muted mb-0">@student.Department</p>
                        @if (!string.IsNullOrEmpty(student.Faculty))
                        {
                            <p class="card-text small text-muted mb-0">@student.Faculty</p>
                        }
                        @if (!string.IsNullOrEmpty(student.Mobile))
                        {
                            <p class="card-text small mb-0">
                                <i class="bi bi-telephone"></i> @student.Mobile
                            </p>
                        }
                    }
                    else if (isPending)
                    {
                        <div class="rounded-circle bg-warning bg-opacity-25 d-flex align-items-center justify-content-center mx-auto mb-2"
                            style="width: 60px; height: 60px;">
                            <i class="bi bi-hourglass-split text-warning" style="font-size: 1.5rem;"></i>
                        </div>
                        <p class="text-muted small mb-0">Application Pending</p>
                    }
                    else if (isMaintenance)
                    {
                        <div class="rounded-circle bg-danger bg-opacity-25 d-flex align-items-center justify-content-center mx-auto mb-2"
                            style="width: 60px; height: 60px;">
                            <i class="bi bi-tools text-danger" style="font-size: 1.5rem;"></i>
                        </div>
                        <p class="text-muted small mb-0">Under Maintenance</p>
                    }
                    else
                    {
                        <div class="rounded-circle bg-secondary bg-opacity-25 d-flex align-items-center justify-content-center mx-auto mb-2"
                            style="width: 60px; height: 60px;">
                            <i class="bi bi-person-dash text-secondary" style="font-size: 1.5rem;"></i>
                        </div>
                        <p class="text-muted small mb-0">Vacant</p>
                    }
                </div>
            </div>
        </div>
    }
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">
                        <i class="bi bi-people-fill text-primary me-2"></i>My Room & Roommates
                    </h2>
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a asp-action="Index">Dashboard</a></li>
                            <li class="breadcrumb-item active">Room Members</li>
                        </ol>
                    </nav>
                </div>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
                </a>
            </div>

            @if (room == null)
            {
                <div class="alert alert-warning" role="alert">
                    <h4 class="alert-heading"><i class="bi bi-exclamation-triangle me-2"></i>No Room Assigned</h4>
                    <p>You don't have a room assignment yet. Please apply for a room to view roommate details.</p>
                    <hr>
                    <a asp-action="AvailableRooms" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>Browse Available Rooms
                    </a>
                </div>
            }
            else
            {
                <!-- Room Information Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-door-open me-2"></i>Room Information
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                                        <i class="bi bi-building text-primary" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Hall</small>
                                        <strong>@(hall?.HallName ?? "N/A")</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                                        <i class="bi bi-door-closed text-success" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Room Number</small>
                                        <strong>@room.RoomNumber</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-info bg-opacity-10 p-3 me-3">
                                        <i class="bi bi-grid-3x3 text-info" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Block</small>
                                        <strong>@(room.Block ?? "N/A")</strong>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex align-items-center">
                                    <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                                        <i class="bi bi-layers text-warning" style="font-size: 1.5rem;"></i>
                                    </div>
                                    <div>
                                        <small class="text-muted d-block">Floor</small>
                                        <strong>@(room.Floor?.ToString() ?? "N/A")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Room Layout Card -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-grid-1x2 me-2"></i>Room Layout
                        </h5>
                    </div>
                    <div class="card-body">
                        @{
                            var windowLeftSeat = Model?.FirstOrDefault(s => s.SeatType == "WINDOW_LEFT");
                            var windowRightSeat = Model?.FirstOrDefault(s => s.SeatType == "WINDOW_RIGHT");
                            var doorLeftSeat = Model?.FirstOrDefault(s => s.SeatType == "DOOR_LEFT");
                            var doorRightSeat = Model?.FirstOrDefault(s => s.SeatType == "DOOR_RIGHT");
                        }

                        <!-- Window Section -->
                        <div class="mb-3">
                            <div class="text-center mb-2">
                                <span class="badge bg-info bg-opacity-75 px-4 py-2">
                                    <i class="bi bi-window me-1"></i>Window Side
                                </span>
                            </div>
                            <div class="row g-3">
                                @{
                                    RenderSeatCard(windowLeftSeat, "Window Left");
                                }
                                @{
                                    RenderSeatCard(windowRightSeat, "Window Right");
                                }
                            </div>
                        </div>

                        <!-- Divider -->
                        <div class="my-4">
                            <hr class="border-2">
                        </div>

                        <!-- Door Section -->
                        <div class="mb-3">
                            <div class="row g-3">
                                @{
                                    RenderSeatCard(doorLeftSeat, "Door Left");
                                }
                                @{
                                    RenderSeatCard(doorRightSeat, "Door Right");
                                }
                            </div>
                            <div class="text-center mt-2">
                                <span class="badge bg-secondary bg-opacity-75 px-4 py-2">
                                    <i class="bi bi-door-open me-1"></i>Door Side
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Occupancy Summary -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-bar-chart me-2"></i>Occupancy Summary
                        </h5>
                    </div>
                    <div class="card-body">
                        @{
                            var totalSeats = Model?.Count ?? 0;
                            var bookedSeats = Model?.Count(s => s.Status == "Booked") ?? 0;
                            var availableSeats = Model?.Count(s => s.Status == "Available") ?? 0;
                            var pendingSeats = Model?.Count(s => s.Status == "Pending") ?? 0;
                            var occupancyRate = totalSeats > 0 ? (bookedSeats * 100 / totalSeats) : 0;
                        }
                        <div class="row text-center">
                            <div class="col-md-3 col-6 mb-3">
                                <div class="p-3 rounded bg-light">
                                    <h3 class="mb-0 text-primary">@totalSeats</h3>
                                    <small class="text-muted">Total Seats</small>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="p-3 rounded bg-success bg-opacity-10">
                                    <h3 class="mb-0 text-success">@bookedSeats</h3>
                                    <small class="text-muted">Occupied</small>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="p-3 rounded bg-secondary bg-opacity-10">
                                    <h3 class="mb-0 text-secondary">@availableSeats</h3>
                                    <small class="text-muted">Available</small>
                                </div>
                            </div>
                            <div class="col-md-3 col-6 mb-3">
                                <div class="p-3 rounded bg-warning bg-opacity-10">
                                    <h3 class="mb-0 text-warning">@pendingSeats</h3>
                                    <small class="text-muted">Pending</small>
                                </div>
                            </div>
                        </div>
                        <div class="progress mt-2" style="height: 25px;">
                            <div class="progress-bar bg-success" role="progressbar" style="width: @occupancyRate%;"
                                aria-valuenow="@occupancyRate" aria-valuemin="0" aria-valuemax="100">
                                @occupancyRate% Occupied
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Legend -->
                <div class="mt-4">
                    <div class="d-flex flex-wrap gap-3 justify-content-center">
                        <span class="d-flex align-items-center">
                            <span class="badge bg-success me-1">&nbsp;&nbsp;&nbsp;</span> Booked
                        </span>
                        <span class="d-flex align-items-center">
                            <span class="badge bg-warning me-1">&nbsp;&nbsp;&nbsp;</span> Pending
                        </span>
                        <span class="d-flex align-items-center">
                            <span class="badge bg-secondary me-1">&nbsp;&nbsp;&nbsp;</span> Available
                        </span>
                        <span class="d-flex align-items-center">
                            <span class="badge bg-danger me-1">&nbsp;&nbsp;&nbsp;</span> Maintenance
                        </span>
                        <span class="d-flex align-items-center">
                            <span class="badge bg-primary me-1">&nbsp;&nbsp;&nbsp;</span> Your Seat
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>