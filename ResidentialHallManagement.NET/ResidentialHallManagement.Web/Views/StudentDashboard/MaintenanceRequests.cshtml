@model IEnumerable<ResidentialHallManagement.Core.Entities.MaintenanceRequest>

@{
    ViewData["Title"] = "Maintenance Requests";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-tools"></i> My Maintenance Requests</h2>
        <a asp-action="CreateMaintenanceRequest" class="btn btn-warning">
            <i class="bi bi-plus-circle"></i> New Request
        </a>
    </div>
    <hr />

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Request ID</th>
                        <th>Room</th>
                        <th>Issue</th>
                        <th>Priority</th>
                        <th>Status</th>
                        <th>Submitted On</th>
                        <th>Resolved On</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model)
                    {
                        <tr>
                            <td>#@request.RequestId</td>
                            <td>
                                @request.Room?.Hall?.HallName<br />
                                <small>Room @request.RoomId</small>
                            </td>
                            <td>@request.Issue</td>
                            <td>
                                <span class="badge bg-@(request.Priority == "Urgent" ? "danger" : request.Priority == "High" ? "warning" : "info")">
                                    @request.Priority
                                </span>
                            </td>
                            <td>
                                @if (request.Status == "Pending")
                                {
                                    <span class="badge bg-warning">Pending</span>
                                }
                                else if (request.Status == "InProgress")
                                {
                                    <span class="badge bg-info">In Progress</span>
                                }
                                else if (request.Status == "Resolved")
                                {
                                    <span class="badge bg-success">Resolved</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@request.Status</span>
                                }
                            </td>
                            <td>@request.SubmittedOn.ToString("dd MMM yyyy")</td>
                            <td>@(request.ResolvedOn?.ToString("dd MMM yyyy") ?? "-")</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(request.TechnicianNote))
                        {
                            <tr>
                                <td colspan="7" class="bg-light">
                                    <small><strong>Technician Note:</strong> @request.TechnicianNote</small>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-inbox" style="font-size: 48px;"></i>
            <p class="mt-3">No maintenance requests submitted yet</p>
        </div>
    }

    <a asp-action="Index" class="btn btn-secondary mt-3">
        <i class="bi bi-arrow-left"></i> Back to Dashboard
    </a>
</div>
